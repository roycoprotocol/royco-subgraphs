# External PostgreSQL Configuration
ENVIO_PG_HOST=your-external-postgres-host
ENVIO_PG_PORT=5432
ENVIO_PG_USER=your-username
ENVIO_PG_PASSWORD=your-password
ENVIO_PG_DATABASE=your-database-name

# Performance Settings
MAX_QUEUE_SIZE=50000
MAX_BATCH_SIZE=10000

HASURA_GRAPHQL_ADMIN_SECRET=testing

# Optional: Hasura Configuration (if you want to run Hasura separately)
# HASURA_GRAPHQL_ENDPOINT=http://localhost:8080/v1/metadata
# HASURA_GRAPHQL_ADMIN_SECRET=your-admin-secret