{
  "name": "masa-subgraph",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "deploy": "graph deploy --node https://api.studio.thegraph.com/deploy/ masa",
    "create-local": "graph create --node http://localhost:8020/ masa",
    "remove-local": "graph remove --node http://localhost:8020/ masa",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 masa",
    "prepare:sepolia": "mustache config/sepolia.json config/subgraph.template.yaml > subgraph.yaml && mustache config/sepolia.json config/constants.template.ts > src/constants.ts",
    "prepare:pipeline": "mustache metadata.json config/masa-contracts-pipeline.template.yaml > masa-contracts-pipeline.yaml"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.97.1",
    "@graphprotocol/graph-ts": "0.37.0",
    "mustache-cli": "^2.3.2"
  }
}
